<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/freckleface</item>

    </style>

    <style name="MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="GameScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CenterScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="TopScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">60dp</item>
    </style>

    <style name="BackButton" >
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Rules view -->
    <style name="TextHeaders" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:visibility">visible</item>

        <item name= "android:shadowColor">@color/colorDarkGreen</item>
        <item name= "android:shadowDx">3</item>
        <item name= "android:shadowDy">2</item>
        <item name= "android:shadowRadius">3</item>

    </style>

    <style name="TextSubHeaders" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:visibility">visible</item>

        <item name= "android:shadowColor">@color/colorShadow</item>
        <item name= "android:shadowDx">2</item>
        <item name= "android:shadowDy">1</item>
        <item name= "android:shadowRadius">2</item>

    </style>

    <style name="TextDescription" parent="android:Widget.TextView">
        <item name="android:breakStrategy">simple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>

        <item name= "android:shadowColor">@color/colorShadow</item>
        <item name= "android:shadowDx">1</item>
        <item name= "android:shadowDy">1</item>
        <item name= "android:shadowRadius">1</item>
    </style>

    <style name="TextPoints" parent="android:Widget.TextView">
        <item name="android:breakStrategy">simple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>


        <item name= "android:shadowColor">@color/colorShadow</item>
        <item name= "android:shadowDx">1</item>
        <item name= "android:shadowDy">1</item>
        <item name= "android:shadowRadius">1</item>
    </style>

    <style name="TextPowerups" parent="android:Widget.TextView">
        <item name="android:breakStrategy">simple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>

        <item name= "android:shadowColor">@color/colorShadow</item>
        <item name= "android:shadowDx">1</item>
        <item name= "android:shadowDy">1</item>
        <item name= "android:shadowRadius">1</item>
    </style>

    <style name="LinearRowLayout">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageRow">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ImageRowSnake">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Google Sign In button -->
    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="LLScreen" parent="@style/GameScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="Blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/BlurbColor</item>
    </style>

</resources>
